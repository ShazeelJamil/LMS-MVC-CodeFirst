@{
    Layout = "_LibrarianDashboard";
}
<style>
    .custom-file-input {
        visibility: hidden;
        position: absolute;
    }

    .custom-file-label {
        cursor: pointer;
        padding: 5px 10px;
        background-color: #e9ecef;
        border-radius: 3px;
        display: inline-block;
        width: 200px;
    }
</style>
<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <partial name="_partialErrorSuccess" />
        <form action="/Librarian/Add_Student" method="POST" enctype="multipart/form-data">
            <div class="row  ">
                <h3>Add Student</h3>

                <div class="row ">
                    <div class="col-12 col-xl-6">
                        <div class="card card-plain h-100">
                            <div class="card-body p-3">
                                <ul class="list-group">
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label  >Name</label>
                                            <input type="text" name="name" class="form-control" required>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label  >Student ID </label>
                                            <input type="text" name="studentid" class="form-control" required>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Password: (Must Contains special character and numbers)</label>
                                            <input type="password" class="form-control" minlength="8" name="password" pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9!#%])(?=.{8,})[^\s]+$" required>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>CNIC</label>
                                            <input type="text" class="form-control" name="cnic" required />
                                        </div>
                                    </li>


                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Date of Birth</label>
                                            <input type="date" class="form-control" required name="dob" />
                                        </div>
                                    </li>

                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Contact</label>
                                            <input type="number" class="form-control" maxlength="11" minlength="11" required name="contact" />
                                        </div>
                                    </li>

                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Email</label>
                                            <input type="email" class="form-control" name="email" required>
                                        </div>
                                    </li>
                                   
                                   
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-xl-6">
                        <div class="card card-plain h-100">

                            <div class="card-body p-3">
                                <ul class="list-group">

                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Session</label>
                                            <input type="text" class="form-control" name="session" required />
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Degree</label>
                                            <input type="text" class="form-control" name="degree" required />
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Departement</label>
                                            <input type="text" class="form-control" name="departement" required />
                                        </div>
                                    </li>

                                 
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static ">
                                            <label>Gender: </label>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender" value="male" id="male" required />
                                                <label class="form-check-label" for="male"> Male </label>

                                                <input class="form-check-input" type="radio" name="gender" value="female" id="female" required />
                                                <label class="form-check-label" for="female"> Female </label>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static">
                                            <label for="startYear">Select Start Year:</label>

                                            <select class="input-group input-group-static mt-2 mb-4" name="syear" id="startYear">
                                                <option value="">Select</option>
                                                <script>
                                                    // Get current year
                                                    var currentYear = new Date().getFullYear();

                                                    // Create options for the dropdown menu
                                                    for (var i = currentYear; i >= 1900; i--) {
                                                        document.write("<option value='" + i + "'>" + i + "</option>");
                                                    }
                                                </script>
                                            </select>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static ">
                                            <label for="endtYear">Select Ending year Year:</label>

                                            <select class="input-group input-group-static mt-2" name="eyear" id="endtYear">
                                                <br />
                                                <option value="">Select</option>
                                                <script>
                                                    // Get current year
                                                    var currentYear = new Date().getFullYear();

                                                    // Create options for the dropdown menu
                                                    for (var i = currentYear + 4; i >= 1900; i--) {
                                                        document.write("<option value='" + i + "'>" + i + "</option>");
                                                    }
                                                </script>
                                            </select>
                                        </div>
                                    </li>
                                   
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static " style="padding-top:25px">
                                            <label for="fileInput" class="custom-file-label">Select Libarrian Photo <span style="color:red;">*</span> </label>
                                            <input type="file" id="fileInput" accept="image/*" class="form-control custom-file-input" name="img"  required />
                                        </div>
                                    </li>   
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn bg-success text-white col-4  m-auto " value="Submit">
        </form>
    </div>
</div>

<script>
    var z = "@ViewBag.status";
    if (z == "success") {
        document.getElementById("success_msg").style.display = 'block';
        document.getElementById("show_success_msg").innerText = " Successfully Added & ID is @ViewBag.assignid";
    }
    else if (z == "error") {
        document.getElementById("error_msg").style.display = 'block';
        document.getElementById("show_error_msg").innerText = " Try Again !!!";
    }
</script>
