@{
    Layout = "_LibrarianDashboard";
}

<partial name="_partialErrorSuccess" />

<div class="container-fluid px-2 px-md-4">
    <div class="card card-body mx-3 mx-md-4 ">
        <h2 style="font-style:italic;">Borrow Book</h2>
        <form action="/Librarian/Return_Book" method="POST">
        <div class="row" style="margin-top:20px; " >
            <div class="text-center">
                    <p style="font-weight:bold;color:red;font-style:italic; font-size:20px;display:none;" id="panelty">  </p>
            </div>
            <div class="row">
                <div class="col-12 ">
                    <div class="card card-plain h-100">
                        <div class="card-body p-3">
                            <ul class="list-group">
                                <li class="list-group-item border-0 px-0">
                                    <div class="input-group input-group-static mb-4">
                                        <label>Student ID</label>
                                        <input type="text" class="form-control" name="id" required/>
                                    </div>
                                </li>
                                <li class="list-group-item border-0 px-0">
                                    <div class="input-group input-group-static mb-4">
                                        <label>Book ISBN</label>
                                        <input type="text" class="form-control" name="isbn" required />
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex" style="flex-direction:row-reverse;">
                <input class="btn btn-success " style="width:200px;margin-right:10px;" type="submit" value="Return">
            </div>
        </div>
        </form>
    </div>
</div>
<script>
    var z = "@ViewBag.status";
    if (z == "success") {
        document.getElementById("success_msg").style.display = 'block';
        document.getElementById("show_success_msg").innerText = " Successfully Returned Book !!! ";
            setTimeout(function(){
         document.getElementById("success_msg").style.display = 'none';
    },4000);
        var fine = "@ViewBag.panelty";
        if (fine != "") {
            document.getElementById("panelty").style.display = "block";
            document.getElementById("panelty").innerText = "But you have charged with Fine RS." + fine + "/-";
            setTimeout(function () {
                document.getElementById("panelty").style.display = "none";
            }, 4000);
        }
    }
</script>
