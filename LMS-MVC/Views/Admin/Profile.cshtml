@{
    Layout = "_AdminDashboard";
}
@model LMS_MVC.Models.Admin
<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-primary  opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    <img src="@Url.Content("~/media/images/"+@Model.User.Image)" alt="profile_image" class=" w-100 border-radius-lg shadow-sm">
                </div>
            </div>
            
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h4 class="mb-1">
                       @Model.User.Name
                    </h4>
                    <p class="mb-0 font-weight-normal text-sm">
                        Admin
                    </p>
                </div>
            </div>
            <div class="row  ">
                <div class="row ">
                    <div class="col-12 col-xl-6">
                        <div class="card card-plain h-100">
                            <div class="card-body p-3">
                                <ul class="list-group">
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Name</label>
                                            <input type="text" class="form-control" value="@Model.User.Name" readonly>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>CNIC</label>
                                            <input type="text" class="form-control" value="@Model.Cnic" readonly>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Date Of Joinning</label>
                                            <input type="date" class="form-control" id="setdate" readonly >
                                        </div>
                                    </li>


                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Date of Birth</label>
                                            <input type="date" id="dob" class="form-control" readonly>
                                        </div>
                                    </li>

                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Contact</label>
                                            <input type="number" class="form-control" value="@Model.User.Contact" maxlength="11" minlength="11" readonly>
                                        </div>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6">
                        <div class="card card-plain h-100">

                            <div class="card-body p-3">
                                <ul class="list-group">

                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Employee-ID</label>
                                            <input type="text" class="form-control" value="@Model.User.Id" readonly>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Qualification</label>
                                            <input type="text" class="form-control" value="@Model.Qualification" readonly>
                                        </div>
                                    </li>
                                    <li class="list-group-item border-0 px-0">
                                        <div class="input-group input-group-static mb-4">
                                            <label>Sallary</label>
                                            <input type="text" class="form-control" value="@Model.Salary" readonly>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        var jsDateValue = new Date('@Model.DateOfJoining');
        var dateString = jsDateValue.toLocaleDateString('en-CA'); 
        document.getElementById('setdate').value = dateString;
        jsDateValue = new Date('@Model.User.DateOfBirth');
        dateString = jsDateValue.toLocaleDateString('en-CA');
        document.getElementById('dob').value = dateString;
    </script>
